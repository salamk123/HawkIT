@model HawkIT.Models.Worker
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Worker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/validation-style.css" />
</head>
<body>
    <a class="btn-danger btn rounded-0" asp-action="Logout" asp-controller="Admin">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z" />
            <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z" />
        </svg>
        Выйти
    </a>

    <div class="container">
        <div class="container">
            <div class="card rounded-0">
                <ul class="nav nav-pills nav-justified bg-light rounded-0">
                    <li class="nav-item">
                        <a class="nav-link rounded-0" asp-action="ListProjects" asp-controller="Admin">Projects</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link rounded-0 active" aria-current="page" asp-action="ListWorkers" asp-controller="Admin">Workers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link rounded-0" asp-action="ListTags" asp-controller="Admin">Tags</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link rounded-0" asp-action="ListArticles" asp-controller="Admin">Articles</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container my-4">
        <div class="container">
            <div class="card">

                <div class="card-header bg-light">
                    <strong>
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>
                        Изменить работника
                    </strong>
                    <a asp-controller="Admin" asp-action="ListWorkers" class="float-end btn btn-dark btn-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-globe" viewBox="0 0 16 16">
                            <path d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm7.5-6.923c-.67.204-1.335.82-1.887 1.855A7.97 7.97 0 0 0 5.145 4H7.5V1.077zM4.09 4a9.267 9.267 0 0 1 .64-1.539 6.7 6.7 0 0 1 .597-.933A7.025 7.025 0 0 0 2.255 4H4.09zm-.582 3.5c.03-.877.138-1.718.312-2.5H1.674a6.958 6.958 0 0 0-.656 2.5h2.49zM4.847 5a12.5 12.5 0 0 0-.338 2.5H7.5V5H4.847zM8.5 5v2.5h2.99a12.495 12.495 0 0 0-.337-2.5H8.5zM4.51 8.5a12.5 12.5 0 0 0 .337 2.5H7.5V8.5H4.51zm3.99 0V11h2.653c.187-.765.306-1.608.338-2.5H8.5zM5.145 12c.138.386.295.744.468 1.068.552 1.035 1.218 1.65 1.887 1.855V12H5.145zm.182 2.472a6.696 6.696 0 0 1-.597-.933A9.268 9.268 0 0 1 4.09 12H2.255a7.024 7.024 0 0 0 3.072 2.472zM3.82 11a13.652 13.652 0 0 1-.312-2.5h-2.49c.062.89.291 1.733.656 2.5H3.82zm6.853 3.472A7.024 7.024 0 0 0 13.745 12H11.91a9.27 9.27 0 0 1-.64 1.539 6.688 6.688 0 0 1-.597.933zM8.5 12v2.923c.67-.204 1.335-.82 1.887-1.855.173-.324.33-.682.468-1.068H8.5zm3.68-1h2.146c.365-.767.594-1.61.656-2.5h-2.49a13.65 13.65 0 0 1-.312 2.5zm2.802-3.5a6.959 6.959 0 0 0-.656-2.5H12.18c.174.782.282 1.623.312 2.5h2.49zM11.27 2.461c.247.464.462.98.64 1.539h1.835a7.024 7.024 0 0 0-3.072-2.472c.218.284.418.598.597.933zM10.855 4a7.966 7.966 0 0 0-.468-1.068C9.835 1.897 9.17 1.282 8.5 1.077V4h2.355z" />
                        </svg>
                        Просмотреть таблицу Workers
                    </a>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="text-danger mb-3">* Обязательные поля</div>
                            <form asp-action="EditWorker" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label">
                                        ФИО<span class="text-danger">*</span>
                                        <span asp-validation-for="Name" value="@Model.Name" class="ms-2 text-danger"></span>
                                    </label>
                                    <input asp-for="Name" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Specialization" class="control-label">
                                        Специализация<span class="text-danger">*</span>
                                        <span asp-validation-for="Specialization" value="@Model.Specialization" class="ms-2 text-danger"></span>
                                    </label>
                                    <input asp-for="Specialization" class="form-control" />
                                </div>
                                <div class="form-group row mt-2">
                                    <div class="form-group col-sm-5">
                                        <label asp-for="ImageFile" class="contorl-label">
                                            Выберите изображение(Фон прозрачный; Ширина: 256px; Высота: 250px;)
                                            <span asp-validation-for="ImageFile" class="ms-2 text-danger"></span>
                                        </label>
                                        <input asp-for="ImageFile" class="form-control" />
                                    </div>
                                    <div class="col-sm-3">
                                        <img height="130" src="@Model.WorkerImage" />
                                    </div>
                                </div>
                                <div class="form-group row mt-2">
                                    <div class="form-group col-sm-5">
                                        <label asp-for="IconFile" class="contorl-label">
                                            Выберите иконку(Фон прозрачный; Ширина: 37px; Высота: 37px;)
                                            <span asp-validation-for="IconFile" class="ms-2 text-danger"></span>
                                        </label>
                                        <input asp-for="IconFile" class="form-control" />
                                    </div>
                                    <div class="col-sm-3">
                                        <img height="130" src="@Model.SpecializationIcon" />
                                    </div>
                                </div>
                                

                                <div class="form-group mt-2">
                                    <label asp-for="Projects" class="control-label">
                                        Проекты
                                        <span asp-validation-for="Projects" class="ms-2 text-danger"></span>
                                    </label>
                                    <select multiple name="projects" class="form-control">

                                        @if (ViewData["Projects"] != null)
                                        {
                                            @foreach (var p in (IEnumerable<Project>)ViewData["Projects"])
                                            {
                                                @if (Model.Projects != null && Model.Projects.Contains(p))
                                                {
                                                    <option selected value="@p.Id">@p.Name</option>
                                                }
                                                else
                                                {
                                                    <option value="@p.Id">@p.Name</option>
                                                }
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="form-group my-2">
                                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>

