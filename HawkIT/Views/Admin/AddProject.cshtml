@model HawkIT.Models.Project
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/validation-style.css" />
</head>
<body>
    <a class="btn-danger btn rounded-0" asp-action="Logout" asp-controller="Admin">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z" />
            <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z" />
        </svg>
        Выйти
    </a>

    <div class="container">
        <div class="container">
            <div class="card rounded-0">
                <ul class="nav nav-pills nav-justified bg-light rounded-0">
                    <li class="nav-item">
                        <a class="nav-link rounded-0 active" aria-current="page" asp-action="ListProjects" asp-controller="Admin">Projects</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link rounded-0" asp-action="ListWorkers" asp-controller="Admin">Workers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link rounded-0" asp-action="ListTags" asp-controller="Admin">Tags</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link rounded-0" asp-action="ListArticles" asp-controller="Admin">Articles</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container my-4">
        <div class="container">
            <div class="card">

                <div class="card-header bg-light">
                    <strong>
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                        </svg>
                        Добавить проект
                    </strong>
                    <a asp-controller="Admin" asp-action="ListWorkers" class="float-end btn btn-dark btn-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-globe" viewBox="0 0 16 16">
                            <path d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm7.5-6.923c-.67.204-1.335.82-1.887 1.855A7.97 7.97 0 0 0 5.145 4H7.5V1.077zM4.09 4a9.267 9.267 0 0 1 .64-1.539 6.7 6.7 0 0 1 .597-.933A7.025 7.025 0 0 0 2.255 4H4.09zm-.582 3.5c.03-.877.138-1.718.312-2.5H1.674a6.958 6.958 0 0 0-.656 2.5h2.49zM4.847 5a12.5 12.5 0 0 0-.338 2.5H7.5V5H4.847zM8.5 5v2.5h2.99a12.495 12.495 0 0 0-.337-2.5H8.5zM4.51 8.5a12.5 12.5 0 0 0 .337 2.5H7.5V8.5H4.51zm3.99 0V11h2.653c.187-.765.306-1.608.338-2.5H8.5zM5.145 12c.138.386.295.744.468 1.068.552 1.035 1.218 1.65 1.887 1.855V12H5.145zm.182 2.472a6.696 6.696 0 0 1-.597-.933A9.268 9.268 0 0 1 4.09 12H2.255a7.024 7.024 0 0 0 3.072 2.472zM3.82 11a13.652 13.652 0 0 1-.312-2.5h-2.49c.062.89.291 1.733.656 2.5H3.82zm6.853 3.472A7.024 7.024 0 0 0 13.745 12H11.91a9.27 9.27 0 0 1-.64 1.539 6.688 6.688 0 0 1-.597.933zM8.5 12v2.923c.67-.204 1.335-.82 1.887-1.855.173-.324.33-.682.468-1.068H8.5zm3.68-1h2.146c.365-.767.594-1.61.656-2.5h-2.49a13.65 13.65 0 0 1-.312 2.5zm2.802-3.5a6.959 6.959 0 0 0-.656-2.5H12.18c.174.782.282 1.623.312 2.5h2.49zM11.27 2.461c.247.464.462.98.64 1.539h1.835a7.024 7.024 0 0 0-3.072-2.472c.218.284.418.598.597.933zM10.855 4a7.966 7.966 0 0 0-.468-1.068C9.835 1.897 9.17 1.282 8.5 1.077V4h2.355z" />
                        </svg>
                        Просмотреть таблицу Projects
                    </a>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="text-danger mb-3">* Обязательные поля</div>
                        <div class="col-md-8">
                            <form asp-action="AddProject" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label">
                                        Название<span class="text-danger">*</span>
                                        <span asp-validation-for="Name" class="ms-2 text-danger"></span>
                                    </label>
                                    <input asp-for="Name" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Text" class="control-label">
                                        Текст
                                        <span asp-validation-for="Text" class="ms-2 text-danger"></span>
                                    </label>
                                    <textarea asp-for="Text" class="form-control" rows="3"></textarea>
                                </div>
                                <div class="form-group mt-2">
                                    <label asp-for="ImageFile" class="contorl-label">
                                        Выберите изображение(Фон прозрачный; Ширина: 328px; Высота: 360px;)<span class="text-danger">*</span>
                                        <span asp-validation-for="ImageFile" class="ms-2 text-danger"></span>
                                    </label>
                                    <input asp-for="ImageFile" class="form-control" />
                                </div>
                                <div class="form-group mt-2">
                                    <label asp-for="BannerImages" class="contorl-label">
                                        Выберите изображения для баннеров
                                        <span asp-validation-for="BannerImages" class="ms-2 text-danger"></span>
                                    </label>
                                    <input asp-for="BannerImages" class="form-control" />
                                </div>
                                <div class="form-group mt-2">
                                    <label asp-for="DocumentFiles" class="contorl-label">
                                        Выберите PDF файл(тех. задание)
                                        <span asp-validation-for="DocumentFiles" class="ms-2 text-danger"></span>
                                    </label>
                                    <input asp-for="DocumentFiles" class="form-control" />
                                </div>
                                
                                <div class="form-group mt-2">
                                    <label class="control-label">
                                        Работники<span class="text-danger">*</span>
                                        <span asp-validation-for="Workers" class="ms-2 text-danger"></span>
                                    </label>
                                    <select multiple name="workers" class="form-control">

                                        @if (ViewData["Workers"] != null)
                                        {
                                            @foreach (var w in (IEnumerable<Worker>?)ViewData["Workers"])
                                            {
                                                <option value="@w.Id">@w.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="form-group mt-2">
                                    <label class="control-label">
                                        Тэги
                                        <span class="ms-2 text-danger"></span>
                                    </label>
                                    <select multiple name="tags" class="form-control">

                                        @if (ViewData["Tags"] != null)
                                        {
                                            @foreach (var t in (IEnumerable<Tag>)ViewData["Tags"])
                                            {
                                                <option value="@t.Id">@t.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="form-group my-2">
                                    <input type="submit" value="Добавить" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>

